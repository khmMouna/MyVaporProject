<!DOCTYPE html>
<html>
    <head>
        <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }
        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        tr:nth-child(even) {
            background-color: #dddddd;
        }
        </style>
    </head>
    
    <body>
        <h2>My notifications list</h2>
        <table style="width:100%">
            <tr>
                #for(title in titles) {
                <th>#(title)</th>
                }
            </tr>
            #for(message in messages) {
            <tr>
                <td>#(message.id)</td>
                <td>#(message.alert)</td>
                <td>#(message.position)</td>
            </tr>
            }
        </table>
    </body>
</html>

